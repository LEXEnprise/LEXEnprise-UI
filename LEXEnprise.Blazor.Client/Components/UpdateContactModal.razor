@using LEXEnprise.Blazor.Shared.Validations

<div class="modal fade show d-block" tabindex="-1" role="dialog">
    <div class="modal-backdrop fade show" @onclick="Cancel"></div>
    <div class="modal-dialog modal-md" style="z-index: 1050">
        <!-- Pop it above the backdrop -->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Title</h4>
                <button type="button" class="close" aria-label="Close" @onclick="Cancel">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <EditForm class="form-horizontal" Model="ContactInfo" OnValidSubmit="SaveContact">
                <DataAnnotationsValidator />
                <CommonCustomValidation @ref="_updateContactValidation" />
                <ValidationSummary />
                <div class="modal-body">
                    <div class="card card-primary card-tabs">
                        <div class="card-header p-0 pt-1">
                            <ul class="nav nav-tabs" id="custom-tabs-basic-info-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-tabs-basic-info-tab" data-toggle="pill"
                                       href="#custom-tabs-basic-info" role="tab" aria-controls="custom-tabs-basic-info" aria-selected="true">Basic Info</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-tabs-contact-info-tab" data-toggle="pill"
                                       href="#custom-tabs-contact-info" role="tab" aria-controls="custom-tabs-contact-info" aria-selected="false">Contact Info</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-tabs-other-info-tab" data-toggle="pill"
                                       href="#custom-tabs-other-info" role="tab" aria-controls="custom-tabs-other-info" aria-selected="false">Other Info</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="custom-tabs-concat-tabContent">
                                <div class="tab-pane fade show active" id="custom-tabs-basic-info"
                                     role="tabpanel" aria-labelledby="custom-tabs-one-basic-info-tab">
                                    <div class="form-group">
                                        <label for="contactName" class="col-form-label">Contact Name</label>
                                        <InputText @bind-Value="ContactInfo.ContactPerson" class="form-control" placeholder="Contact Name" />
                                    </div>

                                    <div class="form-group">
                                        <label for="address1" class="col-form-label">Address 1</label>
                                        <InputText @bind-Value="ContactInfo.Address1" class="form-control" placeholder="Address 1" />
                                    </div>
                                    <div class="form-group">
                                        <label for="address2" class="col-form-label">Address 2</label>
                                        <InputText @bind-Value="ContactInfo.Address2" class="form-control" placeholder="Address 2" />
                                    </div>
                                </div>
                                <div class="tab-pane fade show" id="custom-tabs-contact-info"
                                     role="tabpanel" aria-labelledby="custom-tabs-contact-info-tab">
                                    <div class="form-group">
                                        <label for="email" class="col-form-label">Email Address</label>
                                        <InputText @bind-Value="ContactInfo.Email" class="form-control" placeholder="Email Address" />
                                    </div>
                                    <div class="form-group">
                                        <label for="phone" class="col-form-label">Phone Number</label>
                                        <InputText @bind-Value="ContactInfo.PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    </div>
                                    <div class="form-group">
                                        <label for="mobile" class="col-form-label">Mobile Number</label>
                                        <InputText @bind-Value="ContactInfo.Mobile" class="form-control" placeholder="Mobile Number" />
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">

                                        </div>
                                        <div class="col-sm-6">

                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade show" id="custom-tabs-other-info"
                                     role="tabpanel" aria-labelledby="custom-tabs-one-other-info-tab">
                                    <div class="form-group">
                                        <label for="position" class="col-form-label">Position</label>
                                        <InputText @bind-Value="ContactInfo.Position" class="form-control" placeholder="Position" />
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <InputCheckbox id="isMainAccountOfficer" @bind-Value="@_isMainAccountOfficer" class="custom-control-input" />
                                            <label for="isMainAccountOfficer" class="custom-control-label">Main Account Officer?</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="remarks" class="col-form-label">Remarks</label>
                                        <InputTextArea @bind-Value="ContactInfo.Remarks" class="form-control" row="4" placeholder="Remarks" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button @onclick="Cancel" class="btn btn-outline-light">Cancel</button>
                    <button type="submit" class="btn btn-outline-light">Save</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

