@page "/accounts/login"
@inject IAccountService AccountService
@inject NavigationManager NavigationManager
@using LEXEnprise.Blazor.Application.Models.Account

<div id="login" class="login-page dark-mode" style="min-height: 466px; height: 80vh;">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="./" class="h1"><b>Lex</b>Enprise</a>
            </div>
            <EditForm Model="@_loginModel" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                <div class="card-body">
                    <p class="login-box-msg">Sign in to start your session</p>
                    <div class="input-group mb-3">
                        <InputText @bind-Value="_loginModel.UserName" class="form-control" placeholder="Username" />
                        <ValidationMessage For="@(() => _loginModel.UserName)" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <InputText @bind-Value="_loginModel.Password" type="password" class="form-control" placeholder="Password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <ValidationMessage For="@(() => _loginModel.Password)" />
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary float-right">Sign In</button>
                </div>
                <!-- /.card-body -->
            </EditForm>
            <div id="spinner" style="display: none;" class="overlay"><i class="fas fa-2x fa-sync-alt fa-spin spin-center"></i></div>
        </div>
        <!-- /.card -->
        
    </div>
</div>